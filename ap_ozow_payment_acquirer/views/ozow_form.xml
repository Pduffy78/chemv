<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<template id="redirect_form">
			<form method="post" t-att-action="api_url">
				      <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

<!--				<input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me=""/>-->
				<input type="hidden" name="siteCode" t-att-value="siteCode" />
				<input type="hidden" name="ozow_secret_key" t-att-value="ozow_secret_key" />
				<input type="hidden" name="hashCheck" t-att-value="hashCheck" />
			    <input type="hidden" name="return_url" t-att-value="return_url" />
				<input type="hidden" name="cancelUrl" t-att-value="cancelUrl" />
				<input type="hidden" name="successUrl" t-att-value="successUrl" />
				<input type="hidden" name="errorUrl" t-att-value="errorUrl" />
				<input type="hidden" name="notifyUrl" t-att-value="notifyUrl" />
				<input type="hidden" name="name_first" t-att-value="name_first" />
				<input type="hidden" name="name_last" t-att-value="name_last" />
				<input type="hidden" name="email_address" t-att-value="email_address" />
				<input type="hidden" name="m_payment_id" t-att-value="m_payment_id" />
                <input type="hidden" name="amount" t-att-value="amount" />
                <input type="hidden" name="item_name" t-att-value="item_name" />
                <input type="hidden" name="item_description" t-att-value="item_description" />
				<input type="hidden" name="custom_int1" t-att-value="custom_int1" />
				<input type="hidden" name="custom_str1" t-att-value="custom_str1" />
				<input type="hidden" name="currencyCode" t-att-value="currencyCode" />
				<input type="hidden" name="countryCode" t-att-value="countryCode" />
				<input type="hidden" name="transactionReference" t-att-value="transactionReference" />
				<input type="hidden" name="bankReference" t-att-value="bankReference" />
				<input type="hidden" name="isTest" t-att-value="isTest" />
				<!-- <input type="hidden" name="totalDiscount" t-att-value="totalDiscount" />
				<input type="hidden" name="totalTaxAmount" t-att-value="totalTaxAmount" />
				<input type="hidden" name="subtotalAmount" t-att-value="subtotalAmount" /> -->

				<!-- submit -->
				<button type="submit" width="100px" t-att-class="submit_class">
					<img t-if="not submit_txt" src="/ap_ozow_payment_acquirer/static/src/img/ipay_icon.png" />
					<span t-if="submit_txt">
						<t t-esc="submit_txt" />
						<span class="fa fa-long-arrow-right" />
					</span>
				</button>

			</form>
		</template>
	</data>
</odoo>
